                                    <packaging>jar</packaging>
                                    <classifier>jar-with-dependencies</classifier>
                                    <version>${BUILD_TAG}</version>
                                    <repositoryId>releases</repositoryId>
                                    <url>
                                        http://st1hlxsw57:8080/nexus/content/repositories/jenkins-releases/
                                    </url>
                                </configuration>
                            </execution>
                        </executions>
