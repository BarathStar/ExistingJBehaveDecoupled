    <artifactId>commerce-air-scenarios</artifactId>

    <name>Leapfrog - Air Scenarios</name>
    <packaging>jar</packaging>
    <properties>
        <jbehave.webapp.name>flight</jbehave.webapp.name>
        <jbehave.core.version>3.9.3</jbehave.core.version>
        <jbehave.web.version>3.5.5</jbehave.web.version>
