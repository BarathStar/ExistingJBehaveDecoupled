        <dependency>
            <groupId>com.swacorp.dotcom</groupId>
            <artifactId>fixtures-specifications</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.googlecode.lambdaj</groupId>
